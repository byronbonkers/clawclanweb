  <style>
body {
    font-family: 'Comic Sans MS', sans-serif; /* Matches the playful vibe */
    line-height: 1.6;
    background-color: #f0f8ff; /* Light blue background for a cheerful look */
    color: #333;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

h1 {
    margin-top: 20px;
    color: #0077b6; /* Match heading color with buttons */
    font-size: 2rem;
}

#wins-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 20px;
    width: 100%;
    max-width: 1200px;
    padding: 20px;
}

.win-item {
    background-color: #ffffff;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    text-align: center;
    padding: 15px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.win-item:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
}

.win-item img {
    width: 100%;
    height: auto;
    max-height: 150px;
    object-fit: cover;
    border-radius: 8px;
}

.win-item h3 {
    color: #0077b6; /* Matches the playful button colors */
    font-size: 1.2rem;
    margin: 10px 0;
}

.win-item button {
    background-color: #0077b6;
    color: white;
    border: none;
    padding: 10px 15px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1rem;
    transition: background-color 0.3s, transform 0.2s;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
}

.win-item button:hover {
    background-color: #0096c7;
    transform: translateY(-3px);
}

/* Popup styles */
#popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8); /* Darker background for better focus */
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 1000;
}

#popup-content {
    background: #fff;
    padding: 25px;
    border-radius: 12px;
    text-align: center;
    width: 90%;
    max-width: 400px;
    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
    animation: fadeIn 0.3s ease-out;
}

#popup-content input,
#popup-content textarea {
    width: 100%;
    margin: 10px 0;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-size: 1rem;
}

#popup-content button {
    background: linear-gradient(135deg, #6dd5ed, #2193b0); /* Matches Claw Clan theme */
    color: white;
    border: none;
    padding: 10px 15px;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.3s, transform 0.2s;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
}

#popup-content button:hover {
    background: linear-gradient(135deg, #2193b0, #6dd5ed);
    transform: translateY(-3px);
}

/* Animation for Popup */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.profile-section {
    position: absolute;
    top: 10px;
    right: 10px;
    display: flex;
    align-items: center;
    font-size: 0.9em;
    flex-direction: row-reverse;
    gap: 10px; /* Adds space between profile and coins */
}

.profile-section h1 {
    margin: 0 10px;
    font-size: 1.1em;
    color: #333;
}

.coin-display {
    font-size: 1.2em;
    color: #333;
    font-weight: bold;
}
  </style>
